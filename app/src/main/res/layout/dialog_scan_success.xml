<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_background"
    android:gravity="center"
    android:elevation="8dp"
    android:layout_margin="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quét mã thành công!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="16dp"/>

    <!-- Icon thành công -->
<!--    android:src="@android:drawable/ic_dialog_info"-->
<!--    app:tint="@color/green"-->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/bus_notification"
        android:layout_marginBottom="16dp"/>

    <!-- Thông tin tuyến -->
    <TextView
        android:id="@+id/tv_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuyến: Tuyến 51"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="8dp"/>

    <!-- Giá tiền -->
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá tiền: 7,000 VNĐ"
        android:textSize="18sp"
        android:textColor="#212121"
        android:layout_marginBottom="8dp"/>

    <!-- Thời gian quét -->
    <TextView
        android:id="@+id/tv_scan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian: 2025-03-19 10:00:00"
        android:textSize="18sp"
        android:textColor="#212121"
        android:layout_marginBottom="16dp"/>

    <!-- Nút OK -->
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:layout_gravity="center"/>
</LinearLayout>