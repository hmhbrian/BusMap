<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Tiêu đề giới thiệu công ty -->
    <TextView
        android:id="@+id/tv_company_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới thiệu công ty"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Giới thiệu ngắn về công ty -->
    <TextView
        android:id="@+id/tv_company_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BusMap là công ty công nghệ hàng đầu chuyên về giải pháp bản đồ giao thông và vận tải công cộng."
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_company_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Hình ảnh các thành viên -->
    <!-- Thành viên 1: Trung Tiến -->
    <ImageView
        android:id="@+id/img_member_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/trung_tien"
        android:contentDescription="Hình Trung Tiến"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_company_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_member_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trung Tiến - CEO"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/img_member_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Thành viên 2: Minh Hoàng -->
    <ImageView
        android:id="@+id/img_member_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/minh_hoang"
        android:contentDescription="Hình Minh Hoàng"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_member_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_member_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minh Hoàng - CTO"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/img_member_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Thành viên 3: Minh Thuận -->
    <ImageView
        android:id="@+id/img_member_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/minh_thuan"
        android:contentDescription="Hình Minh Thuận"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_member_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_member_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minh Thuận - COO"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/img_member_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>
