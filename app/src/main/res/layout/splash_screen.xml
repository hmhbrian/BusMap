<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="16dp">

    <!-- Hình ảnh lớn của ic_bus nằm trên vòng loading -->
    <ImageView
        android:id="@+id/ic_bus_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/city"
        android:contentDescription="Bus Icon"/>

    <!-- Vòng tròn loading đẹp hơn (tùy chỉnh) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="visible"
        android:layout_below="@id/ic_bus_image"
        android:layout_marginTop="30dp" />

    <!-- TextView chào mừng -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào Mừng Bạn Đến Với BusMap"
        android:textColor="#FFFFFF"
    android:textSize="18sp"
    android:layout_below="@id/progress_bar"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:gravity="center"/>

</RelativeLayout>
