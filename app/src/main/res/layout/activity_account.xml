<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:background="@color/xam">

    <!-- Header section -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/headerbkg"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tài khoản"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Upgrade button -->
    <LinearLayout
        android:id="@+id/btnUpgrade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_button_background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/imgUpgradeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_upgrade_24" />

        <TextView
            android:id="@+id/txtUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nâng cấp lên BusMap Plus"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Menu items -->
    <LinearLayout
        android:id="@+id/linearMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnUpgrade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/txtPersonalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_personal_info"
            android:drawablePadding="8dp"
            android:padding="16dp" />

        <TextView
            android:id="@+id/txtSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="8dp"
            android:padding="16dp" />

        <TextView
            android:id="@+id/txtChangeArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay đổi khu vực"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_change_area"
            android:drawablePadding="8dp"
            android:padding="16dp" />

        <TextView
            android:id="@+id/txtUpdateData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật dữ liệu"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_update_data"
            android:drawablePadding="8dp"
            android:padding="16dp" />

        <TextView
            android:id="@+id/txtRateApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá ứng dụng"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_rate"
            android:drawablePadding="8dp"
            android:padding="16dp" />

        <TextView
            android:id="@+id/txtCompanyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin công ty"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_company_info"
            android:drawablePadding="8dp"
            android:padding="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
