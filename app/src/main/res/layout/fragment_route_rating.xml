<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Tổng Hợp Đánh Giá -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng Hợp Đánh Giá"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <RatingBar
            android:id="@+id/total_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall"/>

        <TextView
            android:id="@+id/edt_total_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Số lượng đánh giá cho mỗi sao -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Mỗi dòng sao -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 ★"
                android:textSize="16sp"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <ProgressBar
                android:id="@+id/progress5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="6"
                android:progress="0"
                android:max="100"
                android:progressTint="#FFCC00" />

            <TextView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Tương tự cho các sao khác -->
        <!-- 4 ★ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 ★"
                android:textSize="16sp"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <ProgressBar
                android:id="@+id/progress4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="6"
                android:progress="0"
                android:max="100"
                android:progressTint="#FFCC00" />

            <TextView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- 3 ★ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 ★"
                android:textSize="16sp"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <ProgressBar
                android:id="@+id/progress3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="6"
                android:progress="0"
                android:max="100"
                android:progressTint="#FFCC00" />

            <TextView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- 2 ★ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 ★"
                android:textSize="16sp"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <ProgressBar
                android:id="@+id/progress2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="6"
                android:progress="0"
                android:max="100"
                android:progressTint="#FFCC00" />

            <TextView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- 1 ★ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 ★"
                android:textSize="16sp"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <ProgressBar
                android:id="@+id/progress1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="6"
                android:progress="0"
                android:max="100"
                android:progressTint="#FFCC00" />

            <TextView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="8dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

    <!-- Đánh Giá Của Bạn -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh Giá Của Bạn"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Hãy chia sẻ những trải nghiệm của bạn để giúp đỡ mọi người"
        android:textColor="#888888"
        android:textSize="14sp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <RatingBar
        android:id="@+id/star_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"/>

    <EditText
        android:id="@+id/edt_rating"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TextFields" />

    <Button
        android:id="@+id/rating_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đánh giá tuyển"
        android:backgroundTint="#E0F0FF"
        android:textColor="#0000FF"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- Danh sách đánh giá -->
    <ListView
        android:id="@+id/listViewReviews"
        android:layout_width="match_parent"
        android:layout_height="264dp" />

</LinearLayout>
